<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- JSON Encoder for structured logging -->
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
        <providers>
            <timestamp>
                <timeZone>UTC</timeZone>
                <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</pattern>
            </timestamp>
            <version/>
            <logLevel/>
            <message/>
            <mdc/>
            <stackTrace>
                <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                    <maxDepth>30</maxDepth>
                </throwableConverter>
            </stackTrace>
            <pattern>
                <pattern>
                    {
                        "service": "irctc-booking-service",
                        "thread": "%thread",
                        "logger": "%logger{36}"
                    }
                </pattern>
            </pattern>
        </providers>
    </encoder>

    <!-- Console Appender (JSON) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</pattern>
                </timestamp>
                <version/>
                <logLevel/>
                <message/>
                <mdc/>
                <stackTrace>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepth>30</maxDepth>
                    </throwableConverter>
                </stackTrace>
                <pattern>
                    <pattern>
                        {
                            "service": "irctc-booking-service",
                            "thread": "%thread",
                            "logger": "%logger{36}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <!-- File Appender (JSON) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/irctc-booking-service.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/irctc-booking-service.%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</pattern>
                </timestamp>
                <version/>
                <logLevel/>
                <message/>
                <mdc/>
                <stackTrace>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepth>30</maxDepth>
                    </throwableConverter>
                </stackTrace>
                <pattern>
                    <pattern>
                        {
                            "service": "irctc-booking-service",
                            "thread": "%thread",
                            "logger": "%logger{36}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <!-- Human-readable console for development -->
    <springProfile name="dev,local">
        <appender name="CONSOLE_READABLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%mdc{correlationId}] - %msg%n</pattern>
            </encoder>
        </appender>
        <root level="INFO">
            <appender-ref ref="CONSOLE_READABLE"/>
        </root>
    </springProfile>

    <!-- JSON logging for production -->
    <springProfile name="prod,staging">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- Default: JSON for all environments -->
    <springProfile name="!dev,!local,!prod,!staging">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- Application specific loggers -->
    <logger name="com.irctc.booking" level="DEBUG"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
</configuration>

