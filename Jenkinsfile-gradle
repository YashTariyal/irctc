// Jenkinsfile for Gradle-based Pipeline
// Use this Jenkinsfile if you want to use Gradle instead of Maven

pipeline {
    agent any
    
    environment {
        // Use system Java from environment or default location
        JAVA_HOME = "${env.JAVA_HOME ?: sh(script: 'echo $JAVA_HOME', returnStdout: true).trim() ?: '/usr/lib/jvm/java-21-openjdk'}"
        // Use Gradle wrapper if Gradle tool not configured
        PATH = "${env.PATH}:${pwd()}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üîÑ Checking out code from repository...'
                checkout scm
                script {
                    def gitCommit = sh(returnStdout: true, script: 'git rev-parse --short HEAD').trim()
                    env.GIT_COMMIT_SHORT = gitCommit
                    echo "üì¶ Git commit: ${gitCommit}"
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'üî® Building application with Gradle...'
                echo "Java Version: ${sh(returnStdout: true, script: 'java -version 2>&1').trim()}"
                sh '''
                    chmod +x ./gradlew || true
                    ./gradlew clean compileJava -x test
                '''
            }
        }
        
        stage('Test') {
            steps {
                echo 'üß™ Running tests...'
                sh './gradlew test'
            }
            post {
                always {
                    junit 'build/test-results/test/**/*.xml'
                    publishTestResults testResultsPattern: 'build/test-results/test/**/*.xml'
                }
            }
        }
        
        stage('Package') {
            steps {
                echo 'üì¶ Packaging application...'
                sh './gradlew bootJar -x test'
            }
            post {
                success {
                    echo '‚úÖ Application packaged successfully'
                    archiveArtifacts artifacts: 'build/libs/*.jar', fingerprint: true
                }
            }
        }
        
        stage('Publish') {
            when {
                anyOf {
                    branch 'main'
                    branch 'release/*'
                    expression { env.GITHUB_EVENT == 'release' }
                }
            }
            steps {
                echo 'üì§ Publishing to GitHub Packages...'
                script {
                    withCredentials([
                        string(credentialsId: 'github-token', variable: 'GITHUB_TOKEN'),
                        string(credentialsId: 'github-owner', variable: 'GITHUB_OWNER'),
                        string(credentialsId: 'github-repo', variable: 'GITHUB_REPO')
                    ]) {
                        sh """
                            ./gradlew publish \
                                -Pgithub.owner=${env.GITHUB_OWNER} \
                                -Pgithub.repo=${env.GITHUB_REPO} \
                                -Pgpr.user=${env.GITHUB_OWNER} \
                                -Pgpr.token=${env.GITHUB_TOKEN}
                        """
                    }
                }
            }
        }
    }
    
    post {
        always {
            script {
                echo 'üìä Build Summary:'
                echo "   Status: ${currentBuild.currentResult}"
                echo "   Build Number: ${env.BUILD_NUMBER}"
                echo "   Git Commit: ${env.GIT_COMMIT_SHORT ?: 'N/A'}"
                try {
                    def gradleVersion = sh(returnStdout: true, script: './gradlew --version 2>&1 | grep Gradle || echo "N/A"').trim()
                    echo "   Gradle Version: ${gradleVersion}"
                } catch (Exception e) {
                    echo "   Gradle Version: N/A"
                }
                // Clean workspace if inside node context
                try {
                    cleanWs()
                } catch (Exception e) {
                    echo "‚ö†Ô∏è  Workspace cleanup skipped: ${e.message}"
                }
            }
        }
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
            echo "Check console output for details."
        }
        unstable {
            echo '‚ö†Ô∏è  Pipeline completed with warnings'
        }
    }
}

